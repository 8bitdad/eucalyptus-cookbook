{
  "name": "cloud-in-a-box-source",
  "description": "All components installed from source and configured to run on the same machine",
  "json_class": "Chef::Role",
  "default_attributes": {
    "eucalyptus": {
      "install-type": "source",
      "source-branch": "maint/3.4/testing",
      "home-directory": "/opt/eucalyptus",
      "release-rpm": "http://release-repo.eucalyptus-systems.com/releases/eucalyptus/3.4/centos/6/x86_64/eucalyptus-release-internal-3.4-1.el6.noarch.rpm",
      "install-load-balancer": false
    }
  },
  "chef_type": "role",
  "run_list": [
    "recipe[eucalyptus]",
    "recipe[eucalyptus::cloud-controller]",
    "recipe[eucalyptus::cluster-controller]",
    "recipe[eucalyptus::storage-controller]",
    "recipe[eucalyptus::walrus]",
    "recipe[eucalyptus::node-controller]",
    "recipe[eucalyptus::register-components]",
    "recipe[eucalyptus::register-nodes]",
    "recipe[eucalyptus::create-first-resources]"
  ]
}
